CC=@CC@
OBJ=
FLAGS=-g -DUSE_XATTR=1 -D_FILE_OFFSET_BITS=64 $(CFLAGS)
BUNDLED_LIBS=@LIBUSEFUL_BUNDLED@
LIBS=@LIBS@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sysconfdir=@sysconfdir@
DEFAULT_CONFIG_PATH=$(sysconfdir)/filewatch.conf

all: $(OBJ) main.c $(BUNDLED_LIBS)
	$(CC) $(FLAGS) -o term_ctrl main.c $(OBJ) $(LIBS) $(BUNDLED_LIBS) 

libUseful/libUseful.a: 
	$(MAKE) -C libUseful

install:
	mkdir -p $(DESTDIR)$(bindir)

clean:
	rm -f *.o */*.o */*.so */*.a

test:
	echo "no tests"
